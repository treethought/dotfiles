{
	"name": "bettergitcommits",
	"displayName": "BetterGitCommits",
	"description": "⚡️ Magit-inspired Git commit message editing",
	"version": "0.5.0",
	"publisher": "davidedmiston",
	"engines": {
		"vscode": "^1.16.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:bettercommits.showCommitScreen"
	],
	"main": "./out/src/extension",
	"contributes": {
		"commands": [
			{
				"command": "bettercommits.showCommitScreen",
				"title": "Better Commits: Show Git Commit Editor"
			},
			{
				"command": "bettercommits.executeCommit",
				"title": "Better Commits: Run Git Commit"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^7.0.43",
		"mocha": "^3.5.0",
		"tslint": "^5.7.0",
		"typescript": "^2.5.2",
		"vscode": "^1.1.5"
	},
	"dependencies": {
		"simple-git": "^1.77.0"
	},
	"__metadata": {
		"id": "27830e4c-0868-4376-99e1-cbdc533aafa1",
		"publisherId": "62fcefed-6b85-4c53-bef2-115243fb9ac7",
		"publisherDisplayName": "davidedmiston"
	}
}